<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    android:elevation="3dp"
    android:longClickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/albumArt"
            android:layout_height="180dp"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:contentDescription="@string/albumart"
            android:transitionName="@string/albumart"
            android:src="@drawable/no_cover_small"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/firstTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="1dp"
            android:text="@string/_1st_title"
            android:textColor="@android:color/primary_text_light"
            android:textSize="16sp"
            android:ellipsize="end"
            android:layout_below="@id/albumArt"/>
        <TextView
            android:id="@+id/secondTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="@string/_2nd_title"
            android:textColor="@android:color/primary_text_light"
            android:textSize="12sp"
            android:ellipsize="end"
            android:layout_below="@id/firstTitle"/>
        <TextView
            android:id="@+id/numberOfSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="6dp"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="12sp"
            android:layout_below="@id/secondTitle"/>
        <ImageView
            android:id="@+id/overflow"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_below="@id/albumArt"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>